<%- include('../partials/header') %>

<main>
  <h1><%= title %></h1>

  <p>Browse available courses and click a course for details.</p>

  <% if (!courses || courses.length === 0) { %>
    <p>No courses found.</p>
  <% } else { %>
    <div class="course-list">
      <% courses.forEach(course => { %>
        <div class="course-card" style="margin: 14px 0; padding: 12px; border: 1px solid #ddd; border-radius: 8px;">
          <h3 style="margin: 0 0 6px;">
            <a href="/catalog/<%= course.slug %>">
              <%= course.courseCode %> - <%= course.name %>
            </a>
          </h3>

          <p style="margin: 0 0 6px;">
            <strong><%= course.departmentCode %></strong> â€¢
            <%= course.creditHours %> credit hours
          </p>

          <% if (course.description) { %>
            <p style="margin: 0;"><%= course.description %></p>
          <% } %>
        </div>
      <% }) %>
    </div>
  <% } %>
</main>

<%- include('../partials/footer') %>